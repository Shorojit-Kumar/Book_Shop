@{
    ViewData["Title"] = "Books Show";

}

<div class="mt-4">
</div>
<div class="row pt-4">

    <div class="col-6">
        <h4 class="text-primary">Book List</h4>

    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Add Book
        </a>

    </div>
</div>



<div class="d-flex mt-3">

    @foreach (var book in ViewBag.Books)
    {

        <div class="card m-2" style="width: 18rem;">
            <img src="@book.BookImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@book.Name</h5>
                <p class="card-text">@book.Title</p>
                <a  href="@Url.Action("AuthorDetails", "Author")?id=@book.AuthorId">
                    @book.AuthorName
                </a>
            </div>

            <div class="card-body">
                <a class="btn btn-sm btn-primary" href="@Url.Action("BookDetails", "Book")?id=@book.Id">
                    <i class="bi bi-plus-circle"></i> Details
                </a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Edit", "Book")?id=@book.Id">
                    <i class="bi bi-plus-circle"></i> Edit
                </a>

                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@book.Id">
                    Delete
                </button>

                <div class="modal fade" id="exampleModal-@book.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete the @book.Name</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you want to delete parmanently?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Book")?id=@book.Id">
                                    <i class="bi bi-plus-circle"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

